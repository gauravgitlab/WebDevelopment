
<%- include("partials/header") -%> 

<h1>Compose</h1>

<form action="/compose" method="post">
    <div class="form-group">
    
        <label for="">Title</label>
        <input class="form-control" type="text" name="postTitle" placeholder="Enter the title">
    
        <label for="">Post</label>
        <textarea class="form-control" name="postBody" rows="5" placeholder="Enter the post"></textarea>
    
    </div>
    
    <button class="btn btn-primary" type="submit" name="button">Publish</button>    

</form>

